{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "strict": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "skipDefaultLibCheck": true,
        "skipLibCheck": true,

        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        },
    },
    "include": ["**/*.ts", "eslint.config.js"],
}
